{
  "name": "telegram-crypto-bot",
  "version": "1.0.0",
  "description": "Bot do Telegram para controle de acesso a grupo de calls cripto via afiliados Blofin",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "build": "tsc",
    "dev": "nodemon src/index.ts",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/**/*.ts",
    "test": "jest",
    "migrate": "ts-node src/cli/migrate.ts",
    "migrate:up": "ts-node src/cli/migrate.ts up",
    "migrate:down": "ts-node src/cli/migrate.ts down",
    "migrate:status": "ts-node src/cli/migrate.ts status",
    "migrate:create": "ts-node src/cli/migrate.ts create",
    "test-env": "node test-env.js",
    "debug-env": "node debug-env.js"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "bcryptjs": "^2.4.3",
    "crypto-js": "^4.2.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "i18next": "^25.4.2",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "node-cron": "^3.0.3",
    "pg": "^8.11.3",
    "redis": "^4.6.11",
    "telegraf": "^4.15.7",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/crypto-js": "^4.2.1",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.4",
    "@types/node-cron": "^3.0.11",
    "@types/pg": "^8.10.9",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.3"
  },
  "keywords": [
    "telegram",
    "bot",
    "crypto",
    "blofin",
    "affiliate"
  ],
  "author": "Pedro",
  "license": "MIT"
}
